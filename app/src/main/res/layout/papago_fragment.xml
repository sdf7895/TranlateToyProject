<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="activity" type="com.example.toyproject.MainActivity" />
        <variable
            name="papagoFragment" type="com.example.toyproject.view.PapagoFragment" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/textButton"
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:background="@color/limpidity"
                android:gravity="left|center"
                android:text="한국어"
                android:textSize="20dp"/>

            <ImageButton
                android:id="@+id/button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:onClick="@{papagoFragment::setData}"
                />

            <Button
                android:id="@+id/textButton2"
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:background="@color/limpidity"
                android:onClick="@{activity::setSeletFragment}"
                android:gravity="right|center"
                android:text="영어"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/grey"
            android:orientation="vertical"></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editText"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:background="@null"
                android:hint="텍스트를입력해주세요"
                android:textSize="30dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="horizontal"
            android:background="@drawable/language_gradient">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:textSize="30dp"
                android:layout_height="50dp"/>

        </LinearLayout>

    </LinearLayout>

</layout>